doctype html
html
	head
		meta(charset='utf-8')
		title More Data! Yayyy
		script(type='text/javascript' src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js')
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
		meta(name='viewport', content='initial-scale=1,maximum-scale=1,user-scalable=no')
		link(rel='stylesheet' href='/css/newEntry.css')
		script(type='text/javascript', src='/js/newEntry.js')
		//- link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
	body
		h3 Review for #{newID}
		.form-container
			form#newDatapoint(action='/newdata', method='POST')
				select(name='restaurant_id')
					each r in reviewed
						option(value=r.restaurant_id + '_' + r.restaurant) #{r.restaurant}
				.form-group.row
					label.col-sm-2.col-form-label(for='restaurant') Restaurant
					.col-sm-10
						input#restaurant.form-control(type='text', placeholder='Restaurant', name='restaurant')
				.form-group.row
					label.col-sm-2.col-form-label(for='city') City
					.col-sm-10
						input#city.form-control(type='text', placeholder='City', name='city')
				.form-group.row
					label.col-sm-2.col-form-label(for='state') State
					.col-sm-10
						input#state.form-control(type='text', placeholder='State', name='state')
				.form-group.row
					label.col-sm-2.col-form-label(for='rating') Rating
					.col-sm-10
						input#rating.form-control(type='text', placeholder='Rating', name='rating')
				.form-group.row
					label.col-sm-2.col-form-label(for='cuisine') Cuisine
					.col-sm-10
						input#cuisine.form-control(type='text', placeholder='Type of Cuisine?', name='cuisine')
				.form-group.row
					label.col-sm-2.col-form-label(for='priceRange') Price Range
					.col-sm-10
						input#priceRange.form-control(type='text', placeholder='$ to $$$$', name='priceRange')
				.form-group.row
					label.col-sm-2.col-form-label(for='value') Value
					.col-sm-10
						input#value.form-control(type='text', placeholder='How Pricey/Fair', name='value')
				.form-group.row
					label.col-sm-2.col-form-label(for='priceDetails') Price Details
					.col-sm-10
						input#priceDetails.form-control(type='text', placeholder='How Pricey/Fair', name='priceDetails')
				.form-group.row
					label.col-sm-2.col-form-label(for='itemsTried') Items Tried
					.col-sm-10
						input#itemsTried.form-control(type='text', placeholder='What did I try?', name='itemsTried')
				.form-group.row
					label.col-sm-2.col-form-label(for='thoughts') Thoughts
					.col-sm-10
						input#thoughts.form-control(type='text', placeholder='How was it?', name='thoughts')
				.form-group.row
					label.col-sm-2.col-form-label(for='return') Would I Return?
					.col-sm-10
						input#return.form-control(type='text', placeholder='Would I Return?', name='return')
				.form-group.row
					label.col-sm-2.col-form-label(for='website') Website
					.col-sm-10
						input#website.form-control(type='text', placeholder='Would I Return?', name='website')
				.form-group.row
					.col-sm-10
						button#submit.btn.btn-primary(type='submit') Find On Yelp